{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "lib"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules",
    "dist", "**/tests/**"]
}
